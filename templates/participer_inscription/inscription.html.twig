{% extends 'base.html.twig' %}

{% block title %}Inscription aux assises{% endblock %}

{% block body %}
    {% include '/navbar.html.twig' %}
    <div class="content-inscription-container">
        <div class="box-inscription-information">
            <h4>Sélectionner les ateliers</h4>
            <div class="atelier">
                {% for atelier in ateliers %}
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">{{ atelier.libelle }}</span>
                            <div>
                                <label>
                                    <input type="checkbox" />
                                    <span>Choisir</span>
                                </label>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <h4>Sélectionner l'hébergements</h4>
            <div class="hotel">
                {% for hotel in hotels %}
                    <div class="card">
                        <div class="card-content-hotel">
                            <h5>{{ hotel.nom }}</h5>
                            {% for tarif in hotel.getTarifs%}
                                <div>Chambre {{tarif.categorie.libelleCategorie}} : {{ tarif.tarifNuite}} €</div>
                            {% endfor %}
                        </div>
                        <label>
                            <input value="{{ hotel.id }}" name="group1" type="radio" />
                            <span>Choisir</span>
                        </label>
                    </div>
                {% endfor %}
            </div>
            <h4>Sélectionner la chambre</h4>
                    <div>Chambre single</div>
                         <label>
                            <input value="1" name="group1" type="radio" />
                            <span>Choisir</span>
                        </label>
                            <div>Chambre double</div>
                         <label>
                            <input value="2" name="group1" type="radio" />
                            <span>Choisir</span>
                        </label>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
            <i class="material-icons right">send</i>
        </button>
    </div>


{% endblock %}
