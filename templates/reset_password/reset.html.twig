{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% set errors = form_errors(resetForm) %}
{% block body %}
    <div class='email-container'>
        <div class='box'>
            <div class= 'content-container'>
                {{ form_start(resetForm)}}
                <h3>Réinitialiser votre mot de passe</h3>
                {% include 'reset_password/password-info.html.twig' %}
                <div class="error-message">
                    {{ form_errors(resetForm.plainPassword.first) }}
                </div>
                <div class="reset-password-container">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'validate', 'required' : 'true'}}) }}
                        <label for="password">Mot de passe</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'validate', 'required' : 'true'}}) }}
                        <label for="password">Confirmer votre mot de passe</label>
                    </div>
                </div>
                <div class="reset-password-mbottom">
                    <button class='waves-effect waves-light btn' type="submit">
                        Réinitialiser le mot de passe
                    </button>
                </div>
                {{ form_end(resetForm) }}
                </div>
            </div>
    </div>
{% endblock %}
